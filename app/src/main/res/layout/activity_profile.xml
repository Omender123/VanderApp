<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/NestedScrollBarStyle"
    android:background="@color/white"
    tools:context=".Activity.Profile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:onClick="back"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="-70dp"
                android:src="@drawable/ic_logo_text"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#949494"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_header_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="@dimen/dimen10dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/opensans_semibold"
                android:text="Profile"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen20sp"
                android:textStyle="bold"
                app:itemTextColor="@color/black" />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/dimen70dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingTop="10dp">


            <LinearLayout
                android:background="#F5F3F3"
                android:layout_marginTop="@dimen/dimen5dp"
                android:id="@+id/ll_Orders"
                style="@style/MenuItemParent"
                >



                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile_photo"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:src="@mipmap/ic_launcher"
                    android:visibility="visible" />


                <LinearLayout
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/robotomedium"
                        android:minHeight="@dimen/dimen10dp"
                        android:text="Josh76@gmail.com"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen18sp" />



                </LinearLayout>



            </LinearLayout>


            <LinearLayout

                android:layout_marginTop="60dp"
                style="@style/MenuItemParent"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:src="@drawable/shop"
                    android:visibility="visible" />


                <LinearLayout
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotomedium"

                        android:text="The_great_vibes"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen18sp"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp" />



                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dimen5dp"
                style="@style/MenuItemParent"
                >



                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:src="@drawable/marker"
                    android:visibility="visible" />


                <LinearLayout
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/robotomedium"
                        android:minHeight="@dimen/dimen10dp"
                        android:text="New Delhi, India"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen18sp" />



                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dimen5dp"
                style="@style/MenuItemParent"
                >



                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:src="@drawable/openbox"
                    android:visibility="visible" />


                <LinearLayout
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/robotomedium"
                        android:minHeight="@dimen/dimen10dp"
                        android:text="843 products"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen18sp" />



                </LinearLayout>



            </LinearLayout>





        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>