<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E7E5E5"

    tools:context=".Activity.Add_Product">
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:onClick="back"
        android:background="#E7E5E5"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_logo_text"/>

    </LinearLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#949494"
        android:layout_below="@id/linear"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_5sdp"
            android:orientation="vertical">
            <Spinner
                android:layout_width="match_parent"
                android:padding="@dimen/_5sdp"
                android:textAlignment="center"

                android:entries="@array/categories"
                android:layout_margin="@dimen/dimen5dp"
                android:layout_height="50dp"
                android:gravity="center_horizontal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white"
               />
            <Spinner
                android:layout_width="match_parent"
                android:padding="@dimen/_5sdp"
                android:entries="@array/Subcategories"
                android:textAlignment="center"

                android:layout_margin="@dimen/_5sdp"
                android:layout_height="50dp"
                android:gravity="center_horizontal" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white"
                />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="@dimen/_5sdp"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" PRODUCT TITLE" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/blackcorner"
                android:padding="10dp" />
        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white"
                />
             <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="@dimen/_5sdp"
            >
            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text=" PRODUCT DESCRIPTION" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/blackcorner"
                android:padding="10dp" />

        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="@dimen/_20sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/qty"
                    android:fontFamily="@font/robotomedium"
                    android:layout_width="wrap_content"
                    android:text="Qty"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:id="@+id/min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/qty"
                    android:layout_toRightOf="@+id/qty"
                    android:fontFamily="@font/robotomedium"
                    android:layout_marginLeft="10dp"
                    android:text="---"
                    android:textSize="20dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/black"
                    android:textStyle="bold">
                </TextView>

                <EditText
                    android:id="@+id/ed_qty"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:background="@drawable/blackcorner"
                    android:layout_toEndOf="@+id/min"
                    android:layout_marginLeft="10dp"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:layout_toRightOf="@+id/min"
                    android:gravity="center_horizontal" />


                <ImageView
                    android:id="@+id/add"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toEndOf="@+id/ed_qty"
                    android:layout_toRightOf="@+id/ed_qty"
                    android:fontFamily="@font/robotomedium"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_baseline_add_24"
                    app:tint="@color/black"/>

                <EditText
                    android:id="@+id/ed_price"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:background="@drawable/blackcorner"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:layout_toStartOf="@id/ed_price"
                    android:layout_toLeftOf="@id/ed_price"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/robotomedium"
                    android:layout_marginRight="8dp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:text="Discounted Price"
                    android:layout_marginTop="5dp"
                    android:textSize="18dp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/ed_dis"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/blackcorner"
                    android:layout_toEndOf="@+id/min"
                    android:layout_marginLeft="10dp"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:layout_toRightOf="@+id/min"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="  Add"
                    android:drawableRight="@mipmap/add_camra"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/blackcorner"
                    android:drawablePadding="5dp"
                    android:padding="2dp"
                    android:gravity="center_horizontal" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:layout_marginLeft="-10dp"
                android:layout_marginRight="-10dp"
                android:gravity="center">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ADD"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_margin="20dp"
                    android:background="@drawable/button_border"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>